{% extends 'base.html.twig' %}

{% block content %}
    <div class="table-settings">
        <div class="table">
            <table border="1" class="data-table">
                <thead>
                <tr>
                    <th>
                        Libelle
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Couleur
                    </th>
                    <th>
                        Type du Métal
                    </th>
                    <th>
                        Poids (Kg/Km)
                    </th>
                    <th>
                        Quantité Disponible
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for cable in stock %}
                    <tr>
                        <td>
                            {{ cable.libelle }}
                        </td>
                        <td>
                            {{ cable.type }}
                        </td>
                        <td>
                            {{ cable.couleur }}
                        </td>
                        <td>
                            {{ cable.typeMetal }}
                        </td>
                        <td>
                            {{ cable.poidsKgKm }}
                        </td>
                        <td>
                            {{ cable.quantite }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}